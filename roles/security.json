{
  "name": "security",
  "description": "security configuration",
  "json_class": "Chef::Role",
  "default_attributes": {
    "logwatch": {
      "email": "chris@chatsecure.org",
      "detail": "high",
      "output": "mail",
      "format": "html"
    },
    "unattended_upgrades": {
      "mail": "chris@chatsecure.org"
    },
    "firewall": {
      "rules": [ {
        "http": {
          "port": 80
          }
        }, {
        "https": {
          "port": 443
          }
        }, {
        "ssh": {
          "port": 22
          }
        }
      ]
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[fail2ban]",
    "recipe[ufw]",
    "recipe[unattended_upgrades]",
    "recipe[logwatch]"
  ]
}